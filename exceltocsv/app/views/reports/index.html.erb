<div class = "container animated fadeInRight">
	<h1>DTR Reports</h1>
	<table class = "table table-striped">
		<thead>
			<tr>
				<th style = "text-align: center">Date From</th>
				<th style = "text-align: center">Date To</th>
				<th style = "text-align: center">Actions</th>
			</tr>
		</thead>
		<tbody>
			<%@reports.each do |report|%>
				<tr align = "center">
					<td><%= report.date_start.strftime('%B %e, %Y')%></td>
					<td><%= report.date_end.strftime('%B %e, %Y')%></td>
					<td>
						<div class = "btn-group" role = "group">
							<%#= link_to 'Download Report', report_download_zip_path(report), class: "btn btn-success"%>
							<%= form_tag report_download_zip_path(report), method: :post do %>
								<%= link_to 'View Report', report_path(report), class: "btn btn-warning"%>
								<%= submit_tag 'Download Report', class: "btn btn-success"%>
							<%end%>
						</div>
					</td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>

