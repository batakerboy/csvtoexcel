<div class = "container animated fadeInRight" id = "welcomeDiv" align = "center">
		<br/><br/><br/><br/><br/><br/>
		
		<h1 style = "color: black; font-size: 500%">
			Falco 
			<font color = "red">+</font> 
			Biometrics
			<font color = "red">+</font>
			iEMS
		</h1>
		
		<br/><br/><br/><br/><br/><br/>
		<div class = "row">
			<div class = "col-md-3"></div>
			<%= link_to 'Generate New report', '#', id: "generate_new_report_button", class: "btn btn-lg btn-success col-md-6"%>
		</div>
		
		<br/>
		
		<div class = "row">
			<div class = "col-md-3"></div>
			<%= link_to 'Go to Archives', '#', class: "btn btn-lg btn-info col-md-6", id: 'archives_button'%>
		</div>
		
		<br/>

		<div class = "row">
			<div class = "col-md-3"></div>
			<%= form_tag delete_all_records_reports_path, method: :post do%>
			<%= submit_tag 'Delete All Records', class: "btn btn-lg btn-danger col-md-6"%>
			<%end%>
		</div>

		<br/><br/><br/>
</div>

<script>
	$("#generate_new_report_button").click(function(event){
		// $("#welcomeDiv").removeClass("animated fadeInRight")
		// Event.stop(event);
		$("#welcomeDiv").addClass("animated fadeOutLeft").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', 
			function(){
				window.location = '<%= new_report_path(step: 1)%>';
			}
			);
 	});
 	$("#archives_button").click(function(event){
		// $("#welcomeDiv").removeClass("animated fadeOutLeft")
		$("#welcomeDiv").addClass("animated fadeOutLeft").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', 
			function(){
				window.location = '<%= reports_path%>';
			}
			);
 	});
</script>