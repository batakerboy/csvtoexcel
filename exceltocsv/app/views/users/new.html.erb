<%if @user.errors.any?%>
	<div class = "container">
		<div class = "alert alert-warning alert-dismissable">
			<button type = "button" class = "close" data-dismiss = "alert">&times;</button>
			<div class = "row">
				<div class = "col-md-12">
					<%if @create_admin%>
						<h2>Adding of new admin failed!</h2>
					<%else%>
		    			<h2>Adding of new user failed!</h2>
					<%end%>
				</div>
			</div>
		    <ul>
		    	<div class = "row">
				    <%@user.errors.full_messages.each do |message_error|%>
				    	<div class = "col-md-6">
				    		<li><%= message_error %></li>
				    	</div>
				    <%end%>
		    	</div>
		    </ul>
		</div>
	</div>
<%end%>

<div class = "container animated fadeInRight" id = "welcomeDiv">
	<%if @create_admin%>
		<h1>Create New Admin</h1>
		<%= render 'admin_form'%>
	<%else%>
		<h1>Create New User</h1>
		<%= render 'user_form'%>
	<%end%>
</div>

  <script>
  	$("#profile").click(function(event){
		$("#welcomeDiv").addClass("animated fadeOutLeft").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', 
			function(){
				window.location = '<%= user_profile_path(@current_user)%>';
			}
			);
 	});
  </script>