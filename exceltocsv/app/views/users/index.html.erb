<div class = "container animated fadeIn" id = "welcomeDiv">
	<table class = "table table-striped">
		<div class = "row">
			<div class = "col-md-6"><h1>Users of FBI Integration</h1></div>
			<div class = "col-md-6"><%#= link_to 'Create New User', new_user_path, class: "btn btn-success pull-right", data: {toggle: "modal", target: "#add"}%><%= link_to 'Create New User', new_user_path, class: "btn btn-success pull-right"%></div>			
		</div>
		<thead>
			<tr>
				<th>Name</th>
				<th>Username</th>
				<th>Department</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<%@users.each do |user|%>
				<%unless user.id == @current_user.id%>
					<tr>
						<td><%= user.last_name%>, <%= user.first_name%></td>
						<td><%= user.username%></td>
						<td><%= user.department%></td>
						<%if user.is_active%>
							<td><font color = "green">Active</font></td>
						<%else%>
							<td><font color = "red">Inactive</font></td>
						<%end%>
						<td>
							<div class = "btn-group" role = "group">
								<%= link_to 'Edit', edit_user_path(user), class: "btn btn-info"%>
								<%if user.is_active%>
									<%= link_to 'Deactivate', user_deactivate_path(user), id: "users_deactivate", class: "btn btn-danger"%>
								<%else%>
									<%= link_to 'Activate', user_activate_path(user), id: "users_activate", class: "btn btn-warning"%>
								<%end%>
							</div>
						</td>	
					</tr>
				<%end%>
			<%end%>
		</tbody>
	</table>
</div>

