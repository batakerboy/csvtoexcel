<%if notice.nil? == false%>
	<div class = "container">
		<%if notice.split(":").first == "SUCCESS" %>
			<div class = "alert alert-success alert-dismissable">
				<button type = "button" class = "close" data-dismiss = "alert">&times;</button>
				<%= notice.split(":").last%>
			</div>
		<% else %>
			<div class = "alert alert-danger alert-dismissable">
				<button type = "button" class = "close" data-dismiss = "alert">&times;</button>
				<%= notice.split(":").last%>
			</div>
		<% end %>
	</div>
<%end%>